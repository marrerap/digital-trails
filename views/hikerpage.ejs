<!DOCTYPE html>
<html lang="en">

<%-include('partials/head') %>

  <body class="body">
    <%-include('partials/nav') %>
    <div class="container">
      <div class="row align-items-start">
        <div class="col-3">
          <div class="h-25 border border-dark">
              <div class="col-8 border border-dark">
                  <img src="/image/golblum.png" width="200" height="200">
              </div>
              <div class="col=4">
                <h4><%= hiker %></h4>
              </div>
          </div>
          <div class="h-50 border border-dark">
            <p><%= bio %></p>
          </div>
          <div class="h-25 border border-dark">
          <h2>Friends</h2> 
            <ul>
                <li>Friend</li>
                <li>Friend</li>
                <li>Friend</li>
                <li>Friend</li>
                <li>Friend</li>
            </ul>
          </div>
        </div>
          <div class="col-9">
            <div class="h-75">
                <h1>Plan a Hike</h1>
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                      <li data-target="#myCarousel" data-slide-to="1"></li>
                      <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                  
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                      <div class="item active">
                        <img src="/image/golblum.png" width="200" height="200" alt="Los Angeles">
                      </div>
                  
                      <div class="item">
                        <img src="/image/golblum.png" width="200" height="200" alt="Chicago">
                      </div>
                  
                      <div class="item">
                        <img src="/image/golblum.png" width="200" height="200" alt="New York">
                      </div>
                    </div>
                  
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                      <span class="glyphicon glyphicon-chevron-left"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                      <span class="glyphicon glyphicon-chevron-right"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                <h1>Planned Hikes</h1>
            </div>
            <div class="h-25">
                <h1>Completed</h1>
            </div>
          </div>
        <script src="/js/hikerpage.js"></script>
  </body>

</html>