<!DOCTYPE html>
<html lang="en">

<%-include('partials/head') %>

  <body style="background-color: rgba(242, 245, 236, 0.87);"> 
    <%-include('partials/nav') %>
      <div class="row">
        <div class="col-12">
        </div>
      </div>

      <div class="row">
        <% hikers.forEach((hiker)=> { %>
          <div class="col-sm-4 d-flex justify-content-center" style="margin-top: 1rem;">

            <div class="cards justify-content-center" style="width: 18rem;">


              <div class="card-body">

                <h5 class="card-title">
                  <%=hiker.firstName %>
                </h5>
                
                <p class="card-text">
                  <%=hiker.bio %>
                </p>
                <hr>
                <div>
                  <a href="/hikers/<%=hiker.id %>"><img src="https://img.icons8.com/fluency/48/000000/arrow.png" width="32px" height="25px"/>
                    Go to Profile</a>
                  <form method="post" action="/hikers/<%=hiker.id%>">
                    <button style="background: none; border: none;" class="cardLink"><img src="https://img.icons8.com/ios-filled/50/000000/add-user-group-man-man--v2.png" width="25px" height="25px"/>
                      Add to friends</button>
                  </form>
                </div>

              </div>

            </div>

          </div>
          <% })%>

   




      </div>



  </body>

</html>