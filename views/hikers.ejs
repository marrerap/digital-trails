<!DOCTYPE html>
<html lang="en">

<%-include('partials/head') %>

  <body style="background-color: rgba(242, 245, 236, 0.87);"> 
    <div class="row justify-content-end" style="margin-bottom: 10px;">
      <div class="col-1 " style="padding: 0px;">

        <a class="logout"  href="/logout">Logout</a>
    
      </div>
    </div>
    <%-include('partials/nav') %>
      <div class="row">
        <div class="col-12">
          <h1 class="title">
            <%= title %>
          </h1>
        </div>
      </div>

      <div class="row">
        <% hikers.forEach((hiker)=> { %>
          <div class="col-sm-4 " style="margin-top: 1rem;">

            <div class="cards justify-content-center" style="width: 18rem;">


              <div class="card-body">

                <h5 class="card-title">
                  <%=hiker.firstName %>
                </h5>
                
                <p class="card-text">
                  <%=hiker.bio %>
                </p>
                <a href="/hikers/<%=hiker.id %>"><img src="https://img.icons8.com/fluency/48/000000/arrow.png"/>
                  Go to Profile</a>
                <form method="post" action="/hikers/<%=hiker.id%>">
                  <button style="background: none; border: none;" class="cardLink"><img src="https://img.icons8.com/ios-filled/50/000000/add-user-group-man-man--v2.png" width="25px" height="25px"/>
                    Add to friends</button>
                </form>

              </div>

            </div>

          </div>
          <% })%>

   




      </div>



  </body>

</html>