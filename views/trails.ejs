<!DOCTYPE html>
<html lang="en">

<%-include('partials/head') %>

  <body>
    <div class="row justify-content-end" style="margin-bottom: 10px;">
        <div class="col-1 " style="padding: 0px;">

          <a class="logout"  href="/logout">Logout</a>
      
        </div>
      </div>
    <%-include('partials/nav') %>
      
      
      <div class="row">
        <% trails.forEach((trail)=> { %>

          <div class="col-sm-4 " style="margin-top: 1rem;">

            <div class="cards justify-content-center" style="width: 18rem;">


              <div class="card-body">

                <h5 class="card-title" style="text-align: center; font-size:x-large;">
                  <%=trail.trailName %>
                </h5>
                
                <p class="card-text">
                  <%=trail.description %>
                </p>
                <form method="post" action="/trails/<%=trail.id%>">
                  <button class="cardLink"><img src="https://img.icons8.com/color/50/000000/add-tag.png"/> Add to Planned Hikes</button>
                </form>
                
              </div>

            </div>
          </div>
          <% })%>
      </div>






  </body>

</html>